<html>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Consumers</title>
    <link href="/static/css/base.css" rel="stylesheet">
    <link href="/static/css/modal.css" rel="stylesheet">
    <style>
        .container {
            margin: auto;
            margin-top: 80px;
            width: 80%;
        }

        button {
            cursor: pointer;
        }

        .search-input {
            font-size: 16px;
            margin-bottom: 16px;
            padding: 8px 6px;
            border: 1px solid #ced4da;
            border-radius: 4px;
        }
    </style>
<body>
    <div metal:use-macro="load: ../macros/nav.pt"/>

    <div class="container">
        <h1>Site Detail</h1>
        <form>
            <div class="form">
                <div class="input-row">
                    <label class="input-col-1">Owner Username</label>
                    <div class="input-col-3">
                        <input type="text" name="owner_username" value="${site.owner_username}"/>
                    </div>
                </div>
                <div class="input-row">
                    <label class="input-col-1">Created</label>
                    <div class="input-col-3">
                        <input type="text" name="created" value="${site.created}"/>
                    </div>
                </div>

                <div class="success" style="display:none;"></div>
                <div class="error" style="display:none;"></div>
            </div>
        </form>
            <div class="margin-top: 16px;">
                <button class="btnCustom" onclick="window.location='${sites_list_link}';">
                    Back To List
                </button>
            </div>
    </div>


<script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
<script src="/static/js/base.js"></script>
<script>

</script>
</body>
</html>