<html>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sites</title>
    <link href="/static/css/base.css" rel="stylesheet">
    <link href="/static/css/modal.css" rel="stylesheet">
    <link href="/static/css/table.css" rel="stylesheet">
    <style>
        .container {
            margin: auto;
            margin-top: 80px;
            width: 80%;
        }

        button {
            cursor: pointer;
        }
    </style>
<body>
    <div metal:use-macro="load: ../macros/nav.pt"/>

    <div class="container">
        <h1>Sites</h1>

        <div class="toolbar">
            <button type="button" style="float: right;" onclick="document.getElementById('newModal').style.display = 'block';">Create New Site</button>
        </div>

		<table tal:condition="python: len(table.context)" tal:replace="structure python: table.render()" />
		<div tal:condition="python: not len(table.context)">
			No sites.
		</div>

	    <div class="table-pagination" tal:define="table table" >
            <div class="pagination" tal:condition="python: len(table.context) > table.batchSize">
                <span tal:replace="structure python: table.renderBatch()"/>
            </div>
	    </div>
	</div>

    <div id="deletingModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Deleting?</h3>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete site <strong><span class="deleting_email"></span></strong>?</p>
                <div class="success success-deletion" style="display:none;"></div>
                <div class="error error-deletion" style="display:none;"></div>
            </div>

            <div class="modal-footer">
                <button class='btnOK' onclick="deleteItem(this);">Delete</button>
                <button class='btnNO' onclick="document.getElementById('deletingModal').style.display = 'none';">Cancel</button>
            </div>
        </div>
    </div>

    <div id="newModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add New Site</h3>
            </div>
            <div class="modal-body">
                <div class="form">
                    <div class="input-row">
                        <label class="input-col-1">Email</label>
                        <div class="input-col-3">
                            <input type="text" name="owner" id="site_owner"/>
                        </div>
                    </div>
                    <div class="input-row">
                        <label class="input-col-1">Username</label>
                        <div class="input-col-3">
                            <input type="text" name="owner_username" id="site_owner_username"/>
                        </div>
                    </div>
                    <div class="input-row">
                        <label class="input-col-1">Environemnt</label>
                        <select class="input-col-3" name="environment_type" id="site_environment_type" onchange="onEnvironmentChange()">
                            <option value=""></option>
                            <option value="shared">shared</option>
                            <option value="dedicated">dedicated</option>
                        </select>
                    </div>
                    <div class="input-row" style="display:none;" id="site_environment_details">
                        <label class="input-col-1"></label>
                        <div class="input-col-3">
                            <input type="text" name="environment_name" id="site_environment_name" placeHolder="Name" style="display:none;"/>
                            <input type="text" name="environment_containerid" id="site_environment_containerid" placeHolder="Container Id" style="display:none;"/>
                        </div>
                    </div>
                    <div class="input-row">
                        <label class="input-col-1">License</label>
                        <select class="input-col-3" name="license" id="site_license">
                            <option value=""></option>
                            <option value="trial">trial</option>
                            <option value="enterprise">enterprise</option>
                        </select>
                    </div>
                    <div class="input-row">
                        <label class="input-col-1">Status</label>
                        <select class="input-col-3" name="status" id="site_status">
                            <option value=""></option>
                            <option value="PENDING">PENDING</option>
                            <option value="ACTIVE">ACTIVE</option>
                            <option value="INACTIVE">INACTIVE</option>
                        </select>
                    </div>
                    <div class="input-row">
                        <label class="input-col-1">Created</label>
                        <div class="input-col-3">
                            <input type="text" name="created" id="site_created" placeHolder="2019-12-05T00:00:00Z"/>
                        </div>
                    </div>
                    <div class="input-row">
                        <label class="input-col-1">DNS Names</label>
                        <textarea class="input-col-3" rows="2" name="dns_names" id="site_dns_names"></textarea>
                    </div>
                </div>
                <div class="success success-creation" style="display:none;"></div>
                <div class="error error-creation" style="display:none;"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class='btnSave' onclick="saveItem(this, '${creation_url}');">Save</button>
                <button type="button" class='btnNO' onclick="document.getElementById('newModal').style.display = 'none';">Cancel</button>
            </div>
        </div>
    </div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
<script src="/static/js/base.js"></script>
<script src="/static/js/sites.js"></script>
<script>
    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
        var ids = ["deletingModal", "newModal"];
        for(var i=0; i<ids.length; i++) {
            var modal = document.getElementById(ids[i]);
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    }
</script>

</body>

</html>