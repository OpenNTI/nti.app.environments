<metal:block metal:use-macro="load: ./macros/layout.pt">
    <title metal:fill-slot="title">
        ${message}
    </title>
    <metal:block metal:fill-slot="content">
        <div class="error-container">
            <img class="logo" src="${request.static_url('nti.app.environments:static/logo.png')}"/>
            <h1 class="align-center">${message}</h1>
	        <h2 class="align-center">Oops...</h2>
	        <metal:block tal:omit-tag="" tal:condition="subtext">
                <p class="align-center">
                    ${subtext}
                </p>
            </metal:block>
	        <p class="align-center">If you feel this is in error contact <a href="mailto:support@nextthought.com">support@nextthought.com</a></p>
	        <p class="align-center"><a href="/onboarding">Go Home</a></p>
        </div>
    </metal:block>
</metal:block>
