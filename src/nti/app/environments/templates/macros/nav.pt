<div class="nav" metal:define-macro="nav">
    <div class="nav-brand">
        <a href="/onboarding">
            <img src="${request.static_url('nti.app.environments:static/logo.png')}"/>
        </a>
    </div>
    <div style="float:right">
        <metal:block tal:omit-tag="" tal:condition="view.logged_in">
            <metal:block tal:omit-tag="" tal:condition="view.is_dashboard_visible">
                <div class="nav-item dropdown">
                    <a href="javascript:void(0)" class="dropbtn">Dashboard</a>
                    <div class="dropdown-content">
                        <a href="/onboarding/dashboards/@@trialsites?table-sortOn=table-site_license_end_date-2&table-sortOrder=ascending">Trial Sites</a>
                        <a href="/onboarding/dashboards/@@renewals?table-sortOn=table-site_days_to_renew-3&table-sortOrder=ascending">Sites Renewals</a>
                    </div>
                </div>
            </metal:block>
            <metal:block tal:omit-tag="" tal:condition="python: view.is_roles_visible and view.role_names">
                <div class="nav-item dropdown">
                    <a href="javascript:void(0)" class="dropbtn">Roles</a>
                    <div class="dropdown-content">
                        <metal:block tal:omit-tag="" tal:repeat="option view.role_names">
                            <a href="/onboarding/roles/?role_name=${option[0]}">${option[1]}</a>
                        </metal:block>
                    </div>
                </div>
            </metal:block>
            <metal:block tal:omit-tag="" tal:condition="view.is_hosts_visible">
                <div class="nav-item">
                    <a href="/onboarding/hosts/@@list">Hosts</a>
                </div>
            </metal:block>
            <metal:block tal:omit-tag="" tal:condition="view.is_customers_visible">
                <div class="nav-item">
                    <a href="/onboarding/customers/@@list">Customers</a>
                </div>
            </metal:block>
            <metal:block tal:omit-tag="" tal:condition="view.is_sites_visible">
                <div class="nav-item">
                    <a href="/onboarding/sites/@@list?table-sortOn=table-created-4&table-sortOrder=descending">Sites</a>
                </div>
            </metal:block>
            <div class="nav-item">
                <a href="/logout">Sign out</a>
            </div>
        </metal:block>
        <metal:block tal:omit-tag="" tal:condition="not:view.logged_in">
            <div class="nav-item">
                <a href="/login">Sign in</a>
            </div>
        </metal:block>
    </div>
</div>
